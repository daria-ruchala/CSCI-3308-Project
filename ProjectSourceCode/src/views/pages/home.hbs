<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://api.tiles.mapbox.com/mapbox-gl-js/v3.3.0/mapbox-gl.js"></script>
<link href="https://api.tiles.mapbox.com/mapbox-gl-js/v3.3.0/mapbox-gl.css" rel="stylesheet" />

<style>
  body, html {
    height: 100%;
    margin: 0;
    padding: 0;
  }

  #map {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    z-index: 0;
    right : 0.1px;
  }

  .marker {
    background-image: url('https://docs.mapbox.com/help/demos/custom-markers-gl-js/mapbox-icon.png');
    background-size: cover;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
  }

  .mapboxgl-popup {
    max-width: 200px;
  }

  .mapboxgl-popup-content {
    text-align: center;
    font-family: 'Open Sans', sans-serif;
  }

  .pos-f-t,
  .collapse {
    z-index: 10;
    position: relative;
  }

  .bottom-left-controls {
    position: absolute;
    bottom: 20px;
    left: 20px;
    z-index: 5;
  }
</style>

<div class="bottom-left-controls">
  <button id="toggle-add-pin" class="btn btn-primary">ðŸ§· Add Pin Mode</button>
  <button id="toggle-style" class="btn btn-secondary">ðŸŒ“ Switch Map Style</button>
</div>

<div id="map"></div>

<script>
  mapboxgl.accessToken = 'pk.eyJ1IjoiZm90b3M0ZmFtaWx5IiwiYSI6ImNtOGh6eWx1cDA1eXMybHB1Z2kyajJqbG0ifQ.9paU93BLc6W7vG-8KuOxng';

  const map = new mapboxgl.Map({
    container: 'map',
    style: 'mapbox://styles/fotos4family/cm9bzyq2l007001sp2el69jnl',
    center: [-96, 37.8],
    zoom: 2,
  });

  let addPinMode = false;
  document.getElementById("toggle-add-pin").addEventListener("click", () => {
    addPinMode = !addPinMode;
    const btn = document.getElementById("toggle-add-pin");
    btn.classList.toggle("btn-success", addPinMode);
    btn.classList.toggle("btn-primary", !addPinMode);
    btn.textContent = addPinMode ? "âœ… Click Map to Add Pin" : "ðŸ§· Add Pin Mode";
  });
  let currentStyle = "light"; // default

document.getElementById("toggle-style").addEventListener("click", () => {
  currentStyle = currentStyle === "light" ? "dark" : "light";
  map.setStyle(
    currentStyle === "light"
      ? "mapbox://styles/fotos4family/cm9bzyq2l007001sp2el69jnl" // your light style
      : "mapbox://styles/mapbox/dark-v11" // Mapbox's dark theme
  );
});

  // Load existing pins from the database
  fetch("/api/pins")
    .then(res => res.json())
    .then(data => {
      data.forEach(pin => {
  const el = document.createElement('div');
  el.className = 'marker';

  new mapboxgl.Marker(el)
    .setLngLat([pin.longitude, pin.latitude])
    .setPopup(
      new mapboxgl.Popup({ offset: 25 }).setHTML(`
        <h6>${pin.label}</h6>
        <a href="/pin/${pin.id}" class="btn btn-sm btn-outline-primary mt-2">View & Upload</a>
      `)
    )
    .addTo(map);
      });
    });

  map.on('click', function (e) {
    if (!addPinMode) return;

    const coords = e.lngLat;
    const el = document.createElement('div');
    el.className = 'marker';

    const popup = new mapboxgl.Popup({ offset: 25 })
      .setHTML(`<h6>New Pin</h6><p>Lat: ${coords.lat.toFixed(4)}, Lng: ${coords.lng.toFixed(4)}</p>`);

    new mapboxgl.Marker(el)
      .setLngLat([coords.lng, coords.lat])
      .setPopup(popup)
      .addTo(map);

    // Save to database
    fetch("/api/pins", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        latitude: coords.lat,
        longitude: coords.lng,
        label: "New Pin"
      }),
    });
  });
</script>
