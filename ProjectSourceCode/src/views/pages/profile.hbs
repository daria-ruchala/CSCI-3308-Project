{{> nav }}
<div class="container d-flex justify-content-center align-items-start" style="min-height: 100vh; background-color: #f4f4f4; padding-top: 60px;">
  <div class="row w-100 justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow p-4 rounded-4" style="background-color: white; border: none;">
        <h2 class="text-center mb-4 fw-bold" style="font-size: 1.8rem;">👤 Your Profile</h2>

        <div class="mb-3">
          <label class="form-label fw-semibold" style="font-size: 1rem;">First Name:</label>
          <div class="ps-2" style="font-size: 1.1rem;">{{first_name}}</div>
        </div>

        <div class="mb-4">
          <label class="form-label fw-semibold" style="font-size: 1rem;">Email:</label>
          <div class="ps-2" style="font-size: 1.1rem;">{{email}}</div>
        </div>

        <div class="d-flex justify-content-center gap-2">
          <a href="/" class="btn btn-outline-primary px-4">🏠 Home</a>
          <a href="/logout" class="btn btn-outline-danger px-4">🚪 Logout</a>
        </div>
      </div>
    </div>
  </div>
</div>
